{
  "name": "@leizm/params",
  "version": "1.0.0",
  "description": "参数解析基础库",
  "main": "dist/lib/index.js",
  "typings": "dist/lib/index.d.ts",
  "files": [
    "dist/lib"
  ],
  "scripts": {
    "test": "npm run lint && mocha",
    "test-cov": "nyc --reporter=lcov mocha && nyc report",
    "coveralls": "cat ./coverage/lcov.info | ./node_modules/coveralls/bin/coveralls.js",
    "clean": "rm -rf dist",
    "compile": "npm run clean && tsc",
    "prepublish": "npm run test && npm run compile",
    "lint": "prettier --write 'src/**/*.ts'"
  },
  "nyc": {
    "extension": [
      ".ts"
    ],
    "exclude": [
      "**/*.d.ts"
    ]
  },
  "directories": {
    "test": "test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/leizongmin/leizm-params.git"
  },
  "keywords": [
    "params"
  ],
  "author": "Zongmin Lei <leizongmin@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/leizongmin/leizm-params/issues"
  },
  "homepage": "https://github.com/leizongmin/leizm-params#readme",
  "devDependencies": {
    "@types/body-parser": "^1.16.8",
    "@types/chai": "^4.0.5",
    "@types/mocha": "^2.2.44",
    "@types/supertest": "^2.0.4",
    "chai": "^4.1.2",
    "coveralls": "^2.13.3",
    "mocha": "^3.5.3",
    "nyc": "^11.3.0",
    "prettier": "^1.8.2",
    "ts-node": "^3.3.0",
    "typescript": "^2.6.1"
  }
}
